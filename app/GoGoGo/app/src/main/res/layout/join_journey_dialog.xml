<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adminname"
        android:hint="Admin Name"
        android:minWidth="150dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/journey_name"
        android:hint="Journey Name"
        android:singleLine="true"
        android:minWidth="150dp"
        android:layout_below="@+id/adminname"
        android:layout_alignLeft="@+id/adminname"
        android:layout_alignStart="@+id/adminname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/journey_pass"
        android:hint="Password"
        android:password="true"
        android:singleLine="true"
        android:minWidth="150dp"
        android:layout_alignLeft="@+id/journey_name"
        android:layout_alignStart="@+id/journey_name"
        android:layout_below="@+id/journey_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Journey"
        android:id="@+id/join_btn"
        android:layout_below="@+id/journey_pass"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel_btn"
        android:layout_below="@+id/join_btn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>